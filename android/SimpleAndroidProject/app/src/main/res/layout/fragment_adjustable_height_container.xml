<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.jzhangjie.simpleandroidproject.fragment.AdjustableHeightContainer">
    <FrameLayout
        android:background="#FFFFFFFF"
        android:id="@+id/container_root"
        android:layout_height="200dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="top|right"
            android:background="@drawable/bg_border"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/container_move"
                    android:background="#00FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:background="#00FFFFFF"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="70dp"
                    android:src="@drawable/toggle_1"
                    android:layout_gravity="center_vertical|right"/>
                <TextView
                    android:id="@+id/container_text"
                    android:clickable="true"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="事件列表事件列表事件列表"/>
            </FrameLayout>
            <ImageButton
                android:id="@+id/container_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:src="@drawable/close_1"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="36dp">
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
